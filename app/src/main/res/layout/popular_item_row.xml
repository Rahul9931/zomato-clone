<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/popularrow"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_200"
        android:layout_margin="@dimen/dim_10"
        app:cardCornerRadius="@dimen/dim_20"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="3">

                <ImageView
                    android:id="@+id/foodimage"
                    android:transitionName="foodimage"
                    android:layout_width="@dimen/dim_170"
                    android:layout_height="@dimen/dim_200"
                    android:layout_marginLeft="@dimen/dim_5"
                    android:src="@drawable/menu1" />

                <TextView
                    android:id="@+id/food_name"
                    android:transitionName="foodname"
                    android:layout_width="123dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="@dimen/dim_20"
                    android:fontFamily="@font/yeon_sung"
                    android:text="Herbal Pancake"
                    android:textSize="@dimen/text_dim_30"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="2"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    >

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bentonsan_bold"
                        android:text="100"
                        android:textColor="@color/startcolor"
                        android:textSize="@dimen/text_dim_30"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bentonsan_bold"
                        android:text="Rs"
                        android:textColor="@color/startcolor"
                        android:textSize="@dimen/text_dim_30"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="@dimen/dim_160"
                    android:layout_height="@dimen/dim_45"
                    android:layout_marginTop="@dimen/dim_15"
                    android:layout_marginEnd="@dimen/dim_10"
                    android:background="@drawable/add_to_cart_shape"
                    android:fontFamily="@font/bentonsan_bold"
                    android:gravity="center"
                    android:text="Add to Cart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_dim_23"
                    android:textStyle="bold"
                     />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>