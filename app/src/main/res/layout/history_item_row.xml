<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_200"
        android:layout_margin="@dimen/dim_13"
        android:elevation="5dp"
        app:cardCornerRadius="@dimen/dim_25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/img_history"
                android:layout_width="@dimen/dim_160"
                android:layout_height="@dimen/dim_180"
                android:layout_marginLeft="@dimen/dim_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/menu1" />

            <TextView
                android:id="@+id/foodname_history"
                android:layout_width="120dp"
                android:layout_height="61dp"
                android:layout_marginLeft="@dimen/dim_15"
                android:fontFamily="@font/yeon_sung"
                android:text="Spacy fresh crab"
                android:textSize="@dimen/text_dim_30"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/price_history"
                app:layout_constraintStart_toEndOf="@+id/img_history"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/price_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_15"
                android:fontFamily="@font/bentonsan_bold"
                android:text="100Rs"
                android:textColor="@color/startcolor"
                android:textSize="@dimen/text_dim_30"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_history"
                app:layout_constraintTop_toBottomOf="@+id/foodname_history" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_buyagain"
                android:layout_width="@dimen/dim_150"
                android:layout_height="@dimen/dim_50"
                android:layout_marginEnd="@dimen/dim_10"
                android:background="@drawable/add_to_cart_shape"
                android:text="Buy Again"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_dim_25"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>