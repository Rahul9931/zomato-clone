<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_200"
        android:layout_margin="@dimen/dim_13"
        android:elevation="5dp"
        app:cardCornerRadius="@dimen/dim_25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/foodimage_recent"
                android:layout_width="@dimen/dim_160"
                android:layout_height="@dimen/dim_180"
                android:layout_marginLeft="@dimen/dim_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/menu1" />

            <TextView
                android:id="@+id/foodname_recent"
                android:layout_width="117dp"
                android:layout_height="46dp"
                android:layout_marginLeft="@dimen/dim_15"
                android:fontFamily="@font/yeon_sung"
                android:text="Spacy fresh crab"
                android:textSize="@dimen/text_dim_35"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/price_history"
                app:layout_constraintStart_toEndOf="@+id/foodimage_recent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yeon_sung"
                android:layout_marginTop="@dimen/dim_20"
                android:layout_marginStart="@dimen/dim_20"
                android:text="Quantity "
                android:textStyle="bold"
                android:textSize="@dimen/text_dim_35"
                app:layout_constraintStart_toEndOf="@+id/foodimage_recent"
                app:layout_constraintTop_toBottomOf="@+id/foodname_recent" />

            <TextView
                android:id="@+id/foodQuantity_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bentonsan_bold"
                android:text=" 1 "
                android:textColor="@color/black"
                android:textSize="@dimen/text_dim_35"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView20"
                app:layout_constraintStart_toEndOf="@+id/textView20"
                app:layout_constraintTop_toTopOf="@+id/textView20" />

            <TextView
                android:id="@+id/foodPrice_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bentonsan_bold"
                android:text="100"
                android:textColor="@color/startcolor"
                android:textSize="@dimen/text_dim_35"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/btn_buyagain"
                app:layout_constraintEnd_toStartOf="@+id/btn_buyagain"
                app:layout_constraintTop_toTopOf="@+id/btn_buyagain" />

            <TextView
                android:id="@+id/btn_buyagain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dim_30"
                android:fontFamily="@font/bentonsan_bold"
                android:text="Rs"
                android:textColor="@color/startcolor"
                android:textSize="@dimen/text_dim_35"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>