<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_20"
            android:layout_marginEnd="@dimen/dim_30"
            android:text="Edit Profile"
            android:textSize="@dimen/text_dim_30"
            android:textStyle="bold"
            android:backgroundTint="@color/endcolor"
            android:layout_gravity="end"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_100"
                android:layout_margin="@dimen/dim_20"
                android:background="@drawable/history_edit_text_shape"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dim_10">

                <TextView
                    android:layout_width="@dimen/dim_190"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/yeon_sung"
                    android:text="Name"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_dim_35"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/name_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/lato"
                    android:hint="Admin"
                    android:inputType="text"
                    android:textColor="@color/black"

                    android:textSize="@dimen/text_dim_35"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dim_20"
                android:background="@drawable/history_edit_text_shape"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dim_10">

                <TextView
                    android:layout_width="@dimen/dim_190"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/yeon_sung"
                    android:text="Address"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_dim_35"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/address_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/lato"
                    android:hint="Enter your Address with city or district"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"

                    android:textSize="@dimen/text_dim_35"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_100"
                android:layout_margin="@dimen/dim_20"
                android:background="@drawable/history_edit_text_shape"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dim_10">

                <TextView
                    android:layout_width="@dimen/dim_190"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/yeon_sung"
                    android:text="Emai"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_dim_35"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/email_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/lato"
                    android:hint="Admin@gmail.com"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"

                    android:textSize="@dimen/text_dim_35"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_100"
                android:layout_margin="@dimen/dim_20"
                android:background="@drawable/history_edit_text_shape"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dim_10">

                <TextView
                    android:layout_width="@dimen/dim_190"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/yeon_sung"
                    android:text="Phone"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_dim_35"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/phone_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/lato"
                    android:hint="1234567890"
                    android:inputType="phone"
                    android:textColor="@color/black"

                    android:textSize="@dimen/text_dim_35"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="bottom">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save_profile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_100"
                android:layout_marginStart="@dimen/dim_15"
                android:layout_marginEnd="@dimen/dim_15"
                android:layout_marginBottom="@dimen/dim_20"
                android:background="@drawable/proceed_background"
                android:elevation="@dimen/dim_20"
                android:fontFamily="@font/yeon_sung"
                android:text="Save Information"
                android:textAllCaps="false"
                android:textColor="@color/lightred"
                android:textSize="@dimen/text_dim_35"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>