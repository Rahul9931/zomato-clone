<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Payment_Activity">

    <ImageButton
        android:id="@+id/btndismiss"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="@dimen/dim_30"
        android:layout_marginTop="@dimen/dim_30"
        android:background="@android:color/transparent"
        android:contentDescription="godown"
        android:src="@drawable/arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_10"
        android:fontFamily="@font/yeon_sung"
        android:text="Edit"
        android:textColor="@color/black"
        android:textSize="@dimen/text_dim_50"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btndismiss" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_100"
        android:layout_margin="@dimen/dim_20"
        android:background="@drawable/history_edit_text_shape"
        android:elevation="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dim_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17">

        <TextView
            android:layout_width="@dimen/dim_190"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/yeon_sung"
            android:text="Name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_dim_35"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ems="10"
            android:fontFamily="@font/lato"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="@dimen/text_dim_35"

            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_20"
        android:layout_marginTop="@dimen/dim_30"
        android:layout_marginEnd="@dimen/dim_20"
        android:background="@drawable/history_edit_text_shape"
        android:elevation="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dim_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:layout_width="@dimen/dim_190"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/yeon_sung"
            android:text="Address"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_dim_35"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ems="10"
            android:fontFamily="@font/lato"
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:textSize="@dimen/text_dim_35"

            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_100"
        android:layout_marginStart="@dimen/dim_20"
        android:layout_marginTop="@dimen/dim_30"
        android:layout_marginEnd="@dimen/dim_20"
        android:background="@drawable/history_edit_text_shape"
        android:elevation="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dim_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:layout_width="@dimen/dim_190"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/yeon_sung"
            android:text="Phone"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_dim_35"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ems="10"
            android:fontFamily="@font/lato"
            android:inputType="phone"
            android:textColor="@color/black"
            android:textSize="@dimen/text_dim_35"

            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/payment_method"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_160"
        android:layout_marginStart="@dimen/dim_20"
        android:layout_marginTop="@dimen/dim_30"
        android:layout_marginEnd="@dimen/dim_20"
        android:background="@drawable/history_edit_text_shape"
        android:elevation="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dim_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:layout_width="@dimen/dim_190"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/yeon_sung"
            android:text="Payment Method"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_dim_30"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/dim_150"
            android:layout_height="@dimen/dim_120"
            android:layout_weight="1"
            app:srcCompat="@drawable/cashondelivery" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/total_amount_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_100"
        android:layout_marginStart="@dimen/dim_20"
        android:layout_marginTop="@dimen/dim_30"
        android:layout_marginEnd="@dimen/dim_20"
        android:background="@drawable/history_edit_text_shape"
        android:elevation="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dim_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_method">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_50"
                android:fontFamily="@font/yeon_sung"
                android:text="Total Amount"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_dim_35"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text=""
                android:textColor="@color/darkred"
                android:textSize="@dimen/text_dim_35"

                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/txt_rs"
                app:layout_constraintEnd_toStartOf="@+id/txt_rs"
                app:layout_constraintTop_toTopOf="@+id/txt_rs" />

            <TextView
                android:id="@+id/txt_rs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dim_80"
                android:fontFamily="@font/lato"
                android:text="Rs"
                android:textColor="@color/darkred"
                android:textSize="@dimen/text_dim_35"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_place_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_120"
        android:layout_marginStart="@dimen/dim_25"
        android:layout_marginEnd="@dimen/dim_25"
        android:layout_marginBottom="@dimen/dim_50"
        android:background="@drawable/proceed_background"
        android:elevation="@dimen/dim_20"
        android:fontFamily="@font/yeon_sung"
        android:text="Place My Order"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/text_dim_35"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>